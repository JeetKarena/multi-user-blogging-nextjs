        {
          "name": "Register User (Send OTP)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"username\": \"johndoe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trpc/auth.register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "trpc",
                "auth.register"
              ]
            },
            "description": "Initiates user registration by sending a 6-digit OTP to the provided email address. The user account is not created until OTP verification is completed."
          }
        },
        {
          "name": "Verify OTP",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.result.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.result.data.refreshToken);",
                  "    pm.collectionVariables.set('userId', response.result.data.user.id);",
                  "    pm.collectionVariables.set('userEmail', response.result.data.user.email);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trpc/auth.verifyOtp",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "trpc",
                "auth.verifyOtp"
              ]
            },
            "description": "Verifies the OTP sent to the user's email and completes the registration process. Returns authentication tokens upon successful verification."
          }
        },
